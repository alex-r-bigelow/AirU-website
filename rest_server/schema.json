{
  "stations": {
    "additional_lookup": {
      "url": "regex(\"[\\w]+\")",
      "field": "device_id"
    },
    "schema": {
      "device_id": {
        "type": "string",
        "required": "true",
        "unique": "true"
      },
      "contact_email": {
        "type": "string"
      },
      "location": {
        "type": "dict",
        "schema": {
          "latitude": {
            "type": "float",
            "required": "true",
            "min": -90,
            "max": 90
          },
          "longitude": {
            "type": "float",
            "required": "true",
            "min": -180,
            "max": 180
          },
          "uncertainty_radius": {
            "type": "float"
          }
        }
      },
      "make_public": {
        "type": "boolean"
      }
    }
  },
  "measurements": {
    "schema": {
      "timestamp": {
        "type": "datetime"
      },
      "ambient_light": {
        "type": "float"
      },
      "temperature": {
        "type": "float"
      },
      "humidity": {
        "type": "float"
      },
      "CO2": {
        "type": "float"
      },
      "NO2": {
        "type": "float"
      },
      "PM1.5": {
        "type": "float"
      }
    }
  }
}
